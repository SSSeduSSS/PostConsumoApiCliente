@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="margin-top: 250px;margin-bottom: 150px;margin-left: 80px;">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/ban1.png" />
        </div>
        <div class="carousel-item">
            <img src="~/images/ban2.png" />

        </div>
        <div class="carousel-item">
            <img src="~/images/ban3.png" />
        </div>
        <div class="carousel-item">
            <img src="~/images/ban4.png" />
        </div>
        <div class="carousel-item">
            <img src="~/images/ban5.png" />
        </div>
        <div class="carousel-item">
            <img src="~/images/ban6.png" />
        </div>
    </div>

    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true" style="background-color:blueviolet;"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"style="background-color:blueviolet;"></span>
        <span class="sr-only">Siguiente</span>
    </a>
</div>